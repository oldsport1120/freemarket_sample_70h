%header
  %header
    %div.HeaderContainer
      %div.HeaderMain.Devise__Header
        %h1
          = link_to root_path, class:"HeaderLogo" do
            = image_tag "logo/logo.png", alt: "FURIMALogo", class: "FURIMALogo"
      %h2.Devise-Header ログイン
  %div.Devise__Main
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "Log in"
    = render "devise/shared/links"
%footer.Devise__Footer
  %div.Devise__Footer__Logo
    = link_to root_path, class:"Logo" do
      = image_tag "logo/logo-white.png", alt: "LogoWhite"
  %p  © FURIMA   
