%header
  %header
    %div.HeaderContainer
      %div.HeaderMain.Devise__Header
        %h1
          = link_to root_path, class:"HeaderLogo" do
            = image_tag "logo/logo.png", alt: "FURIMALogo", class: "FURIMALogo"
      %h2.Devise-Header 新規登録
  %div.Devise__Main
    %h2.Devise__Main__Info ユーザー登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        %p.Devise__Field--required 必須
        = f.label 'ニックネーム'
        %br/
        %div.Devise__Input
        = f.text_field :nickname, autofocus: true , placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label 'Eメールアドレス'
        %br/
        %div.Devise__Input
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "（例）furima-tech@camp.co.jp"
      .field
        %p.Devise__Field--required 必須
        = f.label :password
        %em （７文字以上）
        %br/
        %div.Devise__Input
        = f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字７文字以上"
      .field
        %p.Devise__Field--required 必須
        = f.label :password_confirmation
        %br/
        %div.Devise__Input
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数字７文字以上"
      .field
        %p.Devise__Field--required 必須
        = f.label 'お名前(姓)'
        %br/
        %div.Devise__Input
        = f.text_field :family_name, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label 'お名前(名)'
        %br/
        %div.Devise__Input
        = f.text_field :first_name, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '姓(ふりがな)'
        %br/
        %div.Devise__Input
        = f.text_field :family_name_kana, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '名(ふりがな)'
        %br/
        %div.Devise__Input
        = f.text_field :first_name_kana, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '生年月日'
        %br/
        %div.Devise__Input
        = f.date_select :date_of_birth, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 5), default: Date.new(1989, 1, 1), autofocus: true
      %h2.Devise__Main__Info--2 配送先登録
      .field
        %p.Devise__Field--required 必須
        = f.label '送付先お名前(姓)'
        %br/
        %div.Devise__Input
        = f.text_field :ship_family_name, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '送付先お名前(名)'
        %br/
        %div.Devise__Input
        = f.text_field :ship_first_name, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '送付先 姓(ふりがな)'
        %br/
        %div.Devise__Input
        = f.text_field :ship_family_name_kana, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '送付先 名(ふりがな)'
        %br/
        %div.Devise__Input
        = f.text_field :ship_first_name_kana, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '郵便番号'
        %br/
        %div.Devise__Input
        = f.text_field :zip_code, autofocus: true, placeholder: "半角７桁入力 （例）1500013"
      .field
        %p.Devise__Field--required 必須
        = f.label '都道府県'
        %br/
        %div.Devise__Input
        = f.text_field :prefecture, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '市区町村'
        %br/
        %div.Devise__Input
        = f.text_field :city, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--required 必須
        = f.label '番地'
        %br/
        %div.Devise__Input
        = f.text_field :street, autofocus: true, placeholder: "全角入力 （例）５丁目３番地２２号"
      .field
        %p.Devise__Field--optional 任意
        = f.label 'マンション名・ビル名・部屋番号など'
        %br/
        %div.Devise__Input
        = f.text_field :room_number, autofocus: true, placeholder: "全角入力"
      .field
        %p.Devise__Field--optional 任意
        = f.label '電話番号'
        %br/
        %div.Devise__Input
        = f.text_field :tel, autofocus: true, placeholder: "半角入力 （例）09012345678"
      .actions
        = f.submit "登録する" 
      = render "devise/shared/links"
%footer.Devise__Footer
  %div.Devise__Footer__Logo
    = link_to root_path, class:"Logo" do
      = image_tag "logo/logo-white.png", alt: "LogoWhite"
  %p  © FURIMA  

  

  
  