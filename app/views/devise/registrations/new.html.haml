%header
  %header
    %div.HeaderContainer
      %div.HeaderMain.Devise__Header
        %h1
          = link_to root_path, class:"HeaderLogo" do
            = image_tag "logo/logo.png", alt: "FURIMALogo", class: "FURIMALogo"
      %h2.Devise-Header 新規登録
  %div.Devise__Main
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        %p.Devise__Field--required 必須
        = f.label 'ニックネーム'
        %br/
      %div.Devise__Input
        = f.text_field :nickname, autofocus: true
      .field
        = f.label 'Eメールアドレス'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .field
        = f.label '名前(性)'
        %br/
        = f.text_field :family_name, autofocus: true
      .field
        = f.label '名前(名)'
        %br/
        = f.text_field :first_name, autofocus: true
      .field
        = f.label :family_name_kana
        %br/
        = f.text_field :family_name_kana, autofocus: true
      .field
        = f.label :first_name_kana
        %br/
        = f.text_field :first_name_kana, autofocus: true
      .field
        = f.label :date_of_birth
        %br/
        = f.number_field :date_of_birth, autofocus: true
      .actions
        = f.submit "Sign up"
      = render "devise/shared/links"
%footer.Devise__Footer
  %div.Devise__Footer__Logo
    = link_to root_path, class:"Logo" do
      = image_tag "logo/logo-white.png", alt: "LogoWhite"
  %p  © FURIMA   

  
  